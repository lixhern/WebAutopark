@model WebAutopark.Models.Order;

<h2>You shure you want to delete this order? Order id - @Model.OrderId</h2>

<form action="Delete" method="post">
    <input type="hidden" asp-for="OrderId" value="@Model.OrderId"></input>
    <input type="hidden" asp-for="VehicleId" value="@Model.VehicleId"></input>
    <input type="hidden" asp-for="Date" value="@Model.Date"></input>
    <input class="btn btn-outline-danger" type="submit" value="Yes" />
    <a class="btn btn-outline-success" href="/Order/Index">No</a>
</form>
