@{
    ViewData["Title"] = "Create Vehicle Type";
}

<h2 class="mb-4">Vehicle Types</h2>

@if (Model.Count == 0)
{
    <div class="row justify-content-center">
        <div class="col-md-6 text-center">
            <h3>No vehicle types available yet.</h3>
        </div>
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Vehicle Type Name</th>
                <th scope="col">Tax Coefficient</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th scope="row">@item.VehicleTypeId</th>
                    <td>@item.Name</td>
                    <td>@item.TaxCoefficient</td>
                    <td>
                        <a class="btn btn-outline-danger btn-sm" href="/VehicleType/Delete?id=@item.VehicleTypeId" role="button">Delete</a>
                        <a class="btn btn-outline-warning btn-sm" href="/VehicleType/Edit?id=@item.VehicleTypeId" role="button">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a class="btn btn-primary" href="/VehicleType/Create" role="button">Create Vehicle Type</a>
