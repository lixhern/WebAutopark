@model WebAutopark.Models.Vehicle;

<h1>You sure you want to delete this vehicle - @Model.Model?</h1>
<form action="Delete" method="post">
    <input type="hidden" asp-for="VehicleId" value="@Model.VehicleId"></input>
    <input type="hidden" asp-for="VehicleTypeId" value="@Model.VehicleTypeId"></input>
    <input type="hidden" asp-for="Model" value="@Model.Model"></input>
    <input type="hidden" asp-for="RegistrationNumber" value="@Model.RegistrationNumber"></input>
    <input type="hidden" asp-for="Weight" value="@Model.Weight"></input>
    <input type="hidden" asp-for="Year" value="@Model.Year"></input>
    <input type="hidden" asp-for="Mileage" value="@Model.Mileage"></input>
    <input type="hidden" asp-for="Color" value="@Model.Color"></input>
    <input type="hidden" asp-for="FuelConsumption" value="@Model.FuelConsumption"></input>
    <input class="btn btn-outline-danger" type="submit" value="Yes" />
    <a class="btn btn-outline-success" href="/Component/Index">No</a>
</form>
